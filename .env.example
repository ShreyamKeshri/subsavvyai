# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Firebase
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_VAPID_KEY=your_vapid_key

# Razorpay
NEXT_PUBLIC_RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# App URL (used for Google OAuth, email redirects, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Gmail OAuth (for Subscription Auto-Detection)
# Setup instructions:
# 1. Go to Google Cloud Console (console.cloud.google.com)
# 2. Create new project: "SubSavvyAI Gmail Integration"
# 3. Enable Gmail API
# 4. Create OAuth 2.0 credentials (Web application type)
# 5. Add authorized redirect URIs:
#    - http://localhost:3000/api/gmail/callback
#    - http://127.0.0.1:3000/api/gmail/callback
#    - https://yourdomain.com/api/gmail/callback (production)
# 6. Configure OAuth consent screen with scope: gmail.readonly
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GMAIL_REDIRECT_URI=http://localhost:3000/api/gmail/callback

# Spotify OAuth (for Smart Downgrade Alerts)
# Note: Spotify requires explicit loopback address (127.0.0.1), not localhost
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://127.0.0.1:3000/api/oauth/spotify/callback

# Encryption Key (for OAuth tokens and sensitive data)
# Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Must be exactly 64 hex characters (32 bytes)
ENCRYPTION_KEY=your_64_character_hex_encryption_key_here

# Resend Email Service
RESEND_API_KEY=re_your_resend_api_key_here
RESEND_FROM_EMAIL=SubSavvyAI <onboarding@subsavvyai.com>

# Analytics
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_project_api_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn_here
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Canny Feedback Widget
# Sign up at https://canny.io and create a feedback board
# How to get credentials:
# 1. App ID: Found in Canny Settings → General (also called Company ID)
# 2. Board Token: Found in your board's Settings → General
# 3. SSO Secret: Found in Canny Settings → General → SSO (required for auto user identification)
# Note: All three are required for SSO-based authentication
NEXT_PUBLIC_CANNY_APP_ID=your_canny_app_id
NEXT_PUBLIC_CANNY_BOARD_TOKEN=your_canny_board_token
CANNY_SSO_SECRET=your_canny_sso_secret
